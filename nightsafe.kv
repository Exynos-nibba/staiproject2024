BoxLayout:
    orientation: 'vertical'

    Label:
        text: "NightSafe - Stay Safe at Night"
        font_size: 24

    Button:
        text: "Share Location"
        on_press: app.share_location

    Button:
        text: "Emergency SOS"
        background_color: 1, 0, 0, 1
        on_press: app.send_sos

    Button:
        text: "Find Safe Route"
        on_press: app.show_safe_route

    MapView:
        id: mapview
        lat: 20.5937
        lon: 78.9629
        zoom: 11
